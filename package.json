{
  "name": "community-mangrove-watch",
  "version": "1.0.0",
  "description": "A comprehensive participatory monitoring system for mangrove forest conservation",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "setup": "npm run install:all && echo 'Setup complete! Run npm run dev to start the application.'"
  },
  "keywords": [
    "mangrove",
    "conservation",
    "monitoring",
    "environment",
    "community",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "Community Mangrove Watch Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/community-mangrove-watch/community-mangrove-watch.git"
  },
  "bugs": {
    "url": "https://github.com/community-mangrove-watch/community-mangrove-watch/issues"
  },
  "homepage": "https://github.com/community-mangrove-watch/community-mangrove-watch#readme"
}
